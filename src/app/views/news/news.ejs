<!DOCTYPE html>
<html>
    <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    </head>
    <body>
        <nav class="navbar navbar-warning bg-warning">
            <a class="navbar-brand text-white mx-auto" href="#"><h2>News</h2></a>
        </nav>
        <div class="container">
            <div class="row m-4" style="height: 60px;">
                <div class="col-md-6 mt-4 text-center">
                  <table class="table table-striped table-bordered">
                    <tr>
                      <th>ID</th>
                      <th>Title</th>
                      <th>News</th>
                    </tr>
                    <% for (var i = 0; i < news.length; i ++) { %>
                      <tr>
                        <td><%= news[i].id %></td>
                        <td><%= news[i].title %></td>
                        <td><%= news[i].news %></td>
                      </tr>
                    <% } %>
                  </table>
            </div>
    
            <div class="col-md-6 mt-4 card p-4">
                <form class="card-body" action="/" method="post">
                    <h3 class="card-title text-warning">Add News</h3>
                    <div class="form-group mb-2">
                        <input type="text" name="title" class="form-control" placeholder="Title" />
                    </div>
                    <div class="form-group">
                        <input type="text" name="news" class="form-control" placeholder="Content" />
                    </div>
                    <input type="submit" class="btn btn-dark mt-2">
                </form>
            </div>
        </div>
    </body>
</html>